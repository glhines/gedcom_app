<table class="profile" summary="Profile information">
  <tr>
    <td class="main">
      <h1>
        <%= "#{@gedcom.gedcom_file_name} Birthplaces" %>
      </h1>
    </td>
  </tr>
  <tr>
    <% unless @birthplaces.empty? %>
       <table>
         <tr>
           <td><strong>Birthplace</strong></td>
           <td class="numeric"><strong>Count</strong></td>
           <td class="numeric"><strong>Percentage</strong></td>
         </tr>
         <% @birthplaces.each do |key, value| %>
           <tr>
             <td><%= @transcoder.iconv(key.join(', ')) %></td>
             <td class="numeric"><%= value %></td>
             <td class="numeric">
               <%= number_to_percentage((value / @sum.to_f)*100) %></td>
           </tr>
         <% end %>
         <tr>
           <td><strong>Total</strong></td>
           <td class="numeric"><strong><%= @sum %></strong></td>
           <td class="numeric"><strong>100.000%</strong></td>
         </tr>
      </table>
    <% end %>
  </tr>
</table>
